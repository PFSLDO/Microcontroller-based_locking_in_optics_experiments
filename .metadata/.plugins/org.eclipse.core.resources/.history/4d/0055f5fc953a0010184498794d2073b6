void Error_Handler(void);

/* USER CODE BEGIN EFP */
void lcd_init();
void lcd_clear();
void lcd_send_command(uint8_t cmd);
void lcd_send_data(uint8_t data);
void lcd_set_cursor(uint8_t row, uint8_t col);
